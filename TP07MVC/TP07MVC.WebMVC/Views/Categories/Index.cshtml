@model IEnumerable<TP07MVC.Entity.Categories>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categories</h1>
<h2>Index</h2>

<div class="my-4">
    @Html.ActionLink("Add new", "Add", null, new { @class = "btn btn-success" })
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.CategoryID)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Description)
        </th>
        <th>
            @*!!! FIND A WAY TO SHOW PICTURE*@
            @Html.DisplayNameFor(m => m.Picture)
        </th>
    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(m => item.CategoryID)</td>
            <td>@Html.DisplayFor(m => item.CategoryName)</td>
            <td>@Html.DisplayFor(m => item.Description)</td>

            <td>
                @Html.ActionLink("Update", "Update", new { id = item.CategoryID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }
</table>