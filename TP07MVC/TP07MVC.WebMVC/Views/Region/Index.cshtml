@model IEnumerable<TP07MVC.Entity.ViewModel.RegionViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Region</h1>
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("ID")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegionDescription)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RegionID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegionDescription)
        </td>
        <td>
            @Html.ActionLink("Update", "Update", new { id=item.RegionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.RegionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RegionID })
        </td>
    </tr>
}

</table>
