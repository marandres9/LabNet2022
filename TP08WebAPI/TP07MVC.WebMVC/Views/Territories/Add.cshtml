@model TP07MVC.WebMVC.Models.TerritoriesModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool editing = ViewBag.Editing == null ? false : ViewBag.Editing;
}

<h1>Territories</h1>
<hr />
<h2 class="mb-5">
    @(editing ? "Edit" : "Add")
</h2>

@using(Html.BeginForm(editing ? "Edit" : "Add", "Territories"))
{
    <div>

        <div class="form-group">
            @Html.LabelFor(model => model.TerritoryID, new { @class = "control-label" })
            @if(editing)
            {
                @Html.EditorFor(model => model.TerritoryID, new { htmlAttributes = new { @type = "number", @class = "form-control", @readonly = true } })
            }
            else
            {
                @Html.EditorFor(model => model.TerritoryID, new { htmlAttributes = new { @type = "number", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TerritoryID, "", new { @class = "text-danger" })
                @Html.ValidationMessage("id-taken", new { @class = "text-danger" })
            }
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TerritoryDescription, htmlAttributes: new { @class = "control-label" })
            <div class="">
                @Html.EditorFor(model => model.TerritoryDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TerritoryDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RegionID, htmlAttributes: new { @class = "control-label" })
            <div class="">
                @Html.EditorFor(model => model.RegionID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RegionID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
}
